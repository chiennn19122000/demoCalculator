<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:gravity="bottom|end"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_55"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ac"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/ac"
        android:textColor="@color/green"
        android:textSize="@dimen/sp_30"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/number_0"
        app:layout_constraintTop_toBottomOf="@id/number_1" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/div"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/div"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_40"
        app:layout_constraintRight_toLeftOf="@id/equal"
        app:layout_constraintTop_toBottomOf="@id/add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_7"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/number7"
        android:textSize="@dimen/sp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textContent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_8"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/number8"
        android:textSize="@dimen/sp_40"
        app:layout_constraintLeft_toRightOf="@id/number_7"
        app:layout_constraintTop_toBottomOf="@id/textContent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_9"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/number9"
        android:textSize="@dimen/sp_40"
        app:layout_constraintRight_toLeftOf="@id/mul"
        app:layout_constraintTop_toBottomOf="@id/textContent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mul"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/mul"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_30"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textContent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_4"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number4"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_7"
        android:textSize="@dimen/sp_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_5"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number5"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/number_4"
        app:layout_constraintTop_toBottomOf="@id/number_8"
        android:textSize="@dimen/sp_40" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_6"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number6"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@id/sub"
        app:layout_constraintTop_toBottomOf="@id/mul"
        android:textSize="@dimen/sp_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sub"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/sub"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mul"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_40" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_1"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number1"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_4"
        android:textSize="@dimen/sp_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_2"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number2"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/number_4"
        app:layout_constraintTop_toBottomOf="@id/number_5"
        android:textSize="@dimen/sp_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_3"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/number3"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@id/add"
        app:layout_constraintTop_toBottomOf="@id/sub"
        android:textSize="@dimen/sp_40" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/shape_button"
        android:text="@string/add"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number_0"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_button"
        android:text="@string/number0"
        android:textSize="@dimen/sp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/equal"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:text="@string/equal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add"
        android:textColor="@color/green"
        android:textSize="@dimen/sp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>